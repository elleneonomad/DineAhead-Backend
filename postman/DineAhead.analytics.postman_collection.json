{
  "info": {
    "name": "DineAhead - Analytics API",
    "description": "Comprehensive collection for testing analytics endpoints in DineAhead API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{merchantToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Get Analytics Report",
      "item": [
        {
          "name": "Get Last 30 Days (Default)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "type",
                "value": "merchant",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"]
            },
            "description": "Get analytics report for last 30 days (default when no dates provided)"
          },
          "response": []
        },
        {
          "name": "Get Custom Date Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "type",
                "value": "merchant",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports?startDate=2025-10-01&endDate=2025-10-07",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-10-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-10-07"
                }
              ]
            },
            "description": "Get analytics report for specific date range"
          },
          "response": []
        },
        {
          "name": "Get This Month",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "type",
                "value": "merchant",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports?startDate=2025-10-01&endDate=2025-10-31",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-10-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-10-31"
                }
              ]
            },
            "description": "Get analytics report for current month"
          },
          "response": []
        },
        {
          "name": "Get This Week",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "type",
                "value": "merchant",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports?startDate=2025-10-01&endDate=2025-10-07",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-10-01",
                  "description": "Monday of current week"
                },
                {
                  "key": "endDate",
                  "value": "2025-10-07",
                  "description": "Sunday of current week"
                }
              ]
            },
            "description": "Get analytics report for current week"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Invalid Date Format",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "type",
                "value": "merchant",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports?startDate=01-10-2025&endDate=07-10-2025",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"],
              "query": [
                {
                  "key": "startDate",
                  "value": "01-10-2025"
                },
                {
                  "key": "endDate",
                  "value": "07-10-2025"
                }
              ]
            },
            "description": "Test with invalid date format (should return 400)"
          },
          "response": []
        },
        {
          "name": "End Date Before Start Date",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{merchantToken}}",
                "type": "text"
              },
              {
                "key": "type",
                "value": "merchant",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports?startDate=2025-10-07&endDate=2025-10-01",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-10-07"
                },
                {
                  "key": "endDate",
                  "value": "2025-10-01"
                }
              ]
            },
            "description": "Test with end date before start date (should return 400)"
          },
          "response": []
        },
        {
          "name": "No Authentication",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/analytics/reports",
              "host": ["{{baseUrl}}"],
              "path": ["api", "analytics", "reports"]
            },
            "description": "Test without authentication (should return 401)"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
